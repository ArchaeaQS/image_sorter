{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src/main",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": [
    "src/main/**/*",
    "node_modules/electron/electron.d.ts"
  ],
  "exclude": [
    "src/renderer"
  ]
}